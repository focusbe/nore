{
    "name": "NoreCode",
    "version": "0.0.1",
    "productName": "Nore Code",
    "description": "集成前端开发，切图，逻辑编辑，组件调用，项目发布的客户端",
    "productFileName": "NoreCode",
    "main": "dist/main/index.js",
    "scripts": {
        "start-main": "webpack --config build/main.config.js -w --progress --hide-modules --mode=development",
        "start-rendder": "webpack-dev-server --progress --colors --content-base build --config build/renderer.config.js --mode=development -w",
        "electron": "electron ./dist/main/index.js",
        "dist-renderer": "webpack --config build/renderer.config.js --progress --hide-modules --mode=production",
        "dist-main": "webpack --config build/main.config.js --progress --hide-modules --mode=production",
        "rebuild": "electron-rebuild -f -w sharp",
        "dev": "node ./build/index.js",
        "build": "node ./build/index.js --mode production",
        "electron-builder": "electron-builder --x64 --publish never",
        "babel": "babel",
        "postinstall": "install-app-deps"
    },
    "build": {
        "appId": "com.focusbe.tttv",
        "asar": true,
        "publish": [
            {
                "provider": "generic",
                "url": "http://nore.focusbe.com/full/${os}/${arch}/"
            }
        ],
        "asarUnpack": [
            "./templates/**/*",
            "./config/",
            "./data/**/*",
            "./scaffold/**/*"
        ],
        "mac": {
            "category": "your.app.category.type",
            "icon": "assets/norecode",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "win": {
            "target": "nsis",
            "icon": "assets/norecode"
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": false
        },
        "squirrelWindows": {
            "iconUrl": "http://nore.focusbe.com/icon.png"
        },
        "files": {
            "filter": [
                "**/*",
                "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
                "!**/node_modules/.bin",
                "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
                "!**/._*",
                "!.editorconfig",
                "!package.json",
                "!README.md",
                "!tsconfig.json",
                "!yarn.lock",
                "!webpack.config.js",
                "!package-lock.json",
                "!app/*",
                "!output/*",
                "!config_dev/*",
                "!assets/*",
                "!build/*",
                "!workshop/*"
            ]
        },
        "directories": {
            "output": "output"
        }
    },
    "author": "刘鹏",
    "license": "",
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@types/node": "^10.12.18",
        "axios": "^0.18.0",
        "babel-loader": "^8.0.4",
        "babel-plugin-import": "^1.6.7",
        "babel-preset-env": "^1.7.0",
        "babel-preset-stage-2": "^6.13.0",
        "chalk": "^2.4.1",
        "css-loader": "^2.1.0",
        "electron": "3",
        "electron-builder": "^20.38.4",
        "electron-rebuild": "^1.8.4",
        "electron-updater": "^4.0.6",
        "file-loader": "^3.0.1",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "html2canvas": "^1.0.0-rc.1",
        "image-webpack-loader": "^4.6.0",
        "iview": "^3.2.1",
        "iview-loader": "^1.2.2",
        "jquery": "^3.2.1",
        "json-loader": "^0.5.7",
        "juicer": "^0.6.15",
        "less": "^2.7.3",
        "less-loader": "^4.1.0",
        "node-sass": "^4.11.0",
        "pinyin": "^2.8.3",
        "readline-ui": "^2.2.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "ts-loader": "^5.3.2",
        "ts-node": "^7.0.1",
        "typescript": "^3.2.2",
        "url-loader": "^1.1.2",
        "v-contextmenu": "^2.8.0",
        "vue": "^2.5.21",
        "vue-loader": "^15.4.2",
        "vue-router": "^3.0.2",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.5.21",
        "vuex": "^3.0.1",
        "webpack": "^4.28.3",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.14",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "babelify": "^10.0.0",
        "browser-sync": "^2.26.3",
        "browserify": "^16.2.3",
        "fs-extra": "^7.0.1",
        "htmlparser2": "^3.10.1",
        "js-beautify": "^1.9.0",
        "jsonfile": "^5.0.0",
        "jsx-transform": "^2.4.0",
        "lodash-id": "^0.14.0",
        "lowdb": "^1.0.0",
        "postcss": "^7.0.14",
        "postcss-js": "^2.0.0",
        "psdpaser": "^3.2.0",
        "sharp": "^0.22.0",
        "shelljs": "^0.8.3",
        "socket.io": "^2.2.0",
        "sudo-prompt": "^8.2.5",
        "vue-server-renderer": "^2.5.21"
    }
}
